//- 生成分页
mixin page(index,count,url,last,isMobile)
    if index < 1
        - index = 1
    if index > count
        - index = count
    if index == 'last'
        - index = count
    table(align='left', border='1')
        tbody
            tr
                td
                    if index != 1
                        a(href=url+'?page=1') 首页
                    else
                        span 首页
                td
                    - var start = index - 4
                    if start < 1
                        - start = 1
                    - var end = start + 9
                    if end > count
                        - end = count
                    - for(var i=start;i<=end;i++){
                        if i == index
                            | [
                            span(href=url+'?page='+i)= i
                            | ]
                        else
                            | [
                            a(href=url+'?page='+i)= i
                            | ]
                    - }
                td
                    if index != count
                        a(href=url+'?page='+(Number(index)+1)) 下一页
                    else
                        span 下一页
                if last
                    td
                        if index != count
                            a(href=url+'?page='+count) 末页
                        else
                            span 末页

